<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoldNote</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GoldNote.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/6bdf13605e.js" crossorigin="anonymous"></script>

    <style>
        /* --- GLOBAL THEME --- */
        body {
            background-color: #000;
            color: #fff;
            padding-bottom: 100px; /* IMPORTANT: Makes space for the fixed footer */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* --- NAVBAR --- */
        .navbar-custom {
            background-color: #121212;
            border-bottom: 1px solid #333;
        }

        .gold-brand {
            color: #FFD700 !important;
            font-weight: bold;
            font-size: 1.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* --- USER PROFILE TRIGGER --- */
        .user-profile-trigger {
            cursor: pointer;
            padding: 5px 10px;
            border-radius: 30px;
            transition: background 0.3s;
        }

            .user-profile-trigger:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }

        .user-text {
            color: white;
            margin-right: 10px;
            font-size: 0.9rem;
        }

        /* --- FOOTER STYLES (The Fix) --- */
        .footer-custom {
            background-color: #121212; /* Dark background */
            border-top: 1px solid #FFD700; /* Gold Top Border */
            padding: 15px 0;
            box-shadow: 0 -5px 20px rgba(0,0,0,0.8);
        }

        .footer-btn {
            color: #666; /* Default Grey (Not Blue!) */
            text-decoration: none;
            text-transform: uppercase;
            font-size: 0.85rem;
            font-weight: bold;
            padding: 10px 20px;
            margin: 0 5px;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            position: relative;
        }

            .footer-btn:hover {
                color: #fff;
            }

            /* Active State (Gold) */
            .footer-btn.active {
                color: #FFD700;
            }

                /* A small gold dot under the active link */
                .footer-btn.active::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 5px;
                    height: 5px;
                    background-color: #FFD700;
                    border-radius: 50%;
                }

        /* --- DECORATIVE STAR --- */
        .footer-deco {
            position: absolute;
            top: -12px; /* Pull it up to sit on the border */
            left: 50%;
            transform: translateX(-50%);
            background-color: #121212; /* Matches footer bg */
            padding: 0 10px;
            color: #FFD700;
        }

        /* --- MODAL STYLES --- */
        .modal-content {
            background-color: #1a1a1a;
            border: 1px solid #333;
            color: white;
        }

        .modal-header {
            border-bottom: 1px solid #333;
        }

        .text-gold-metallic {
            background: linear-gradient(to bottom, #d4af37 0%, #ffffaa 50%, #d4af37 100%);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark navbar-custom mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand gold-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-music me-2"></i>GoldNote
                </a>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="user-profile-trigger d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#userAccountModal">
                        <span class="user-text d-none d-sm-block">@User.Identity.Name</span>
                        <i class="fas fa-user-circle fa-2x user-icon" style="color: #FFD700;"></i>
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="container mb-5 pb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* --- USER ACCOUNT MODAL --- *@
    @if (User.Identity.IsAuthenticated)
    {
        <div class="modal fade" id="userAccountModal" tabindex="-1" aria-labelledby="userAccountLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-gold-metallic" id="userAccountLabel">Account Settings</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-center p-4">
                        <div class="mb-3">
                            <i class="fas fa-user-circle fa-4x text-gold-metallic"></i>
                        </div>
                        <h4 class="mb-1 text-white">@User.Identity.Name</h4>
                        <p class="text-muted small mb-4">
                            @(User.IsInRole("Teacher") ? "Teacher Account" : "Student Account")
                        </p>
                        <hr class="border-secondary mb-4" />
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <button type="submit" class="btn btn-outline-danger w-100 py-2">
                                <i class="fas fa-sign-out-alt me-2"></i>Log Out
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

    <footer class="footer-custom fixed-bottom">
        <div class="container position-relative">

            @{
                var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
            }


            <div class="d-flex justify-content-center align-items-center pt-1">

                @* 1. Home Button *@
                <a class="footer-btn @(currentController == "Home" ? "active" : "inactive")"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    Home
                </a>

                @* 2. Practice Button *@
                <a class="footer-btn @(currentController == "Practice" ? "active" : "inactive")"
                   asp-area="" asp-controller="Practice" asp-action="Index">
                    Practice
                </a>

                @* 3. NEW: Leaderboard Button *@
                <a class="footer-btn @(currentController == "LeaderBoard" ? "active" : "inactive")"
                   asp-area="" asp-controller="LeaderBoard" asp-action="Index">
                    Leaderboard
                </a>

                @* 4. Teacher/Sub Button *@
                @if (User.IsInRole("Teacher"))
                {
                    <a class="footer-btn @(currentController == "Teacher" ? "active" : "inactive")"
                       asp-area="" asp-controller="Teacher" asp-action="Teacher_index">
                        Teacher
                    </a>
                }
                else
                {
                    <a class="footer-btn @(currentController == "Subscription" ? "active" : "inactive")"
                       asp-area="" asp-controller="Subscription" asp-action="Subscription">
                        Teacher
                    </a>
                }

            </div>

            <div class="text-center mt-2" style="color: #444; font-size: 0.65rem; text-transform: uppercase; letter-spacing: 2px;">
                &copy; 2025 GoldNote
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>