<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoldNote</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GoldNote.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm **navbar-dark bg-secondary-dark** mb-3">
            <div class="container-fluid">
                <a class="navbar-brand **gold-brand**" asp-area="" asp-controller="Home" asp-action="Index">GoldNote</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center" style="background-color: black">
            <div class="btn-group mt-2 mb-2" role="group" aria-label="Footer Navigation">

                <a class="btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    Home
                </a>

                <a class="btn btn-outline-success" asp-area="" asp-controller="Practice" asp-action="Index">
                    Practice
                </a>

                @if (User.IsInRole("Teacher"))
                {
                    // Scenario 1: User IS a Teacher
                    // Button takes them to the teacher dashboard
                    <a class="nav-link text-dark teacher-button" asp-area="" asp-controller="Teacher" asp-action="Teacher_index">
                        Teacher Dashboard
                    </a>
                }
                else
                {
                    // Scenario 2: User IS NOT a Teacher
                    // Button prompts them to subscribe/register as a teacher
                    // **You need to replace "Subscription" with your actual Controller/Action**
                    <a class="btn btn-outline-info" asp-area="" asp-controller="Subscription" asp-action="BecomeTeacher">
                        Teacher
                    </a>
                }

            </div>
            <div class="small">
                &copy; 2025 - GoldNote
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
