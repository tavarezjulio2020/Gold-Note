<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoldNote</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GoldNote.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/6bdf13605e.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark navbar-custom mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand gold-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-music me-2"></i>GoldNote
                </a>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="user-profile-trigger d-flex align-items-center" data-bs-toggle="modal" data-bs-target="#userAccountModal">
                        <span class="user-text d-none d-sm-block">@User.Identity.Name</span>
                        <i class="fas fa-user-circle fa-2x user-icon" style="color: #FFD700;"></i>
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="container mb-5 pb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* --- USER ACCOUNT MODAL --- *@
    @if (User.Identity.IsAuthenticated)
    {
        <div class="modal fade" id="userAccountModal" tabindex="-1" aria-labelledby="userAccountLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-gold-metallic" id="userAccountLabel">Account Settings</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-center p-4">
                        <div class="mb-3">
                            <i class="fas fa-user-circle fa-4x text-gold-metallic"></i>
                        </div>
                        <h4 class="mb-1 text-white">@User.Identity.Name</h4>
                        <p class="text-muted small mb-4">
                            @(User.IsInRole("Teacher") ? "Teacher Account" : "Student Account")
                        </p>
                        <hr class="border-secondary mb-4" />
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <button type="submit" class="btn btn-outline-danger w-100 py-2">
                                <i class="fas fa-sign-out-alt me-2"></i>Log Out
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

    <footer class="footer-custom fixed-bottom">
        <div class="container position-relative">

            @{
                var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
            }

            <div class="d-flex justify-content-center align-items-center">

                @* 1. Home Button *@
                <a class="footer-btn @(currentController == "Home" ? "active" : "inactive")"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    Home
                </a>

                @* 2. Practice Button *@
                <a class="footer-btn @(currentController == "Practice" ? "active" : "inactive")"
                   asp-area="" asp-controller="Practice" asp-action="Index">
                    Practice
                </a>

                @* 3. Teacher/Sub Button *@
                @if (User.IsInRole("Teacher"))
                {
                    <a class="footer-btn @(currentController == "Teacher" ? "active" : "inactive")"
                       asp-area="" asp-controller="Teacher" asp-action="Teacher_index">
                        Teacher
                    </a>
                }
                else
                {
                    <a class="footer-btn @(currentController == "Subscription" ? "active" : "inactive")"
                       asp-area="" asp-controller="Subscription" asp-action="Subscription">
                        Teacher
                    </a>
                }

            </div>

            <i class="fas fa-star footer-deco"></i>

            <div class="text-center mt-2 small" style="color: #444; font-size: 0.7rem;">
                &copy; 2025 - GoldNote
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>