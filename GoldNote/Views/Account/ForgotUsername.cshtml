@{
    ViewData["Title"] = "Recover Username";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Gold Note</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        /* Reusing the exact same styles for consistency */
        body { background-color: #000; color: #fff; height: 100vh; display: flex; align-items: center; justify-content: center; font-family: 'Segoe UI', sans-serif; }
        .card-gold { background-color: #111; border: 1px solid #4a3700; border-radius: 10px; padding: 40px; width: 100%; max-width: 400px; box-shadow: 0 0 20px rgba(212, 175, 55, 0.2); }
        h2 { color: #FFD700; text-align: center; text-transform: uppercase; margin-bottom: 20px; font-size: 1.5rem; }
        p { color: #ccc; text-align: center; font-size: 0.9rem; margin-bottom: 30px; }
        label { color: #FFD700; margin-bottom: 5px; display: block; }
        .gold-input { background-color: #222; border: 1px solid #444; color: #fff; width: 100%; padding: 10px; border-radius: 5px; margin-bottom: 20px; }
        .gold-input:focus { outline: none; border-color: #FFD700; }
        .btn-gold { width: 100%; padding: 12px; font-weight: bold; background: linear-gradient(90deg, #4a3700 0%, #FFD700 50%, #4a3700 100%); border: none; color: #000; border-radius: 5px; }
        .btn-gold:hover { background: linear-gradient(90deg, #FFD700, #ffe033, #FFD700); }
        .links { text-align: center; margin-top: 20px; }
        .links a { color: #888; text-decoration: none; font-size: 0.9rem; margin: 0 10px; }
        .links a:hover { color: #FFD700; }
    </style>
</head>
<body>
    <div class="card-gold">
        <h2>Forgot Username?</h2>
        <p>Enter the email address associated with your account.</p>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success text-center">@TempData["Message"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["Error"]</div>
        }

        <form asp-action="ProcessForgotUsername" asp-controller="Account" method="post">
            <label>Email Address</label>
            <input name="email" type="email" class="gold-input" required placeholder="name@example.com" />
            <button type="submit" class="btn-gold">Recover Username</button>
        </form>

        <div class="links">
            <a asp-action="Login">Back to Login</a> | <a asp-action="ForgotPassword">Forgot Password?</a>
        </div>
    </div>
</body>
</html>