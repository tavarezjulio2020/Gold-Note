@{
    ViewData["Title"] = "Login Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoldNote</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/6bdf13605e.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* --- 1. CORE LAYOUT --- */
        body {
            background-color: #000;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh; /* Use min-height to prevent mobile cutoff */
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-card {
            background-color: #121212;
            border: 1px solid #333;
            width: 100%;
            max-width: 400px;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 40px rgba(0, 0, 0, 0.9); /* Stronger shadow for depth */
        }

        /* --- 2. TYPOGRAPHY & COLORS --- */
        .text-gold-metallic {
            background: linear-gradient(to bottom, #d4af37 0%, #ffffaa 50%, #d4af37 100%);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent !important;
            font-weight: 800; /* Made bolder */
            letter-spacing: -1px;
        }

        .form-label {
            color: #FFD700;
            font-size: 0.75rem; /* Slightly smaller for cleaner look */
            text-transform: uppercase;
            font-weight: 700;
            letter-spacing: 1.5px;
            margin-bottom: 5px;
        }

        /* --- 3. INPUTS & GROUPS (Fixes the ugly white icon box) --- */
        .input-group-text {
            background-color: #1a1a1a; /* Dark background to match theme */
            border: 1px solid #333;
            border-right: none; /* Merge with input */
            color: #FFD700; /* Gold Icon */
        }

        .form-control {
            background-color: #080808; /* Very dark grey, almost black */
            border: 1px solid #333;
            border-left: none; /* Merge with icon group */
            color: white;
            padding: 12px;
        }

            /* Focus state for both the input AND the icon group */
            .form-control:focus {
                background-color: #000;
                color: #fff;
                box-shadow: none; /* Remove default blue glow */
                border-color: #FFD700;
            }

                .form-control:focus + .input-group-text,
                .input-group:focus-within .input-group-text {
                    border-color: #FFD700;
                    color: #fff;
                }

        /* Ensure the border color changes for the whole group on focus */
        .input-group:focus-within .form-control,
        .input-group:focus-within .input-group-text {
            border-color: #FFD700;
        }

        /* --- 4. BUTTONS (These were missing!) --- */
        .btn-gold {
            background-color: #FFD700;
            border: 1px solid #FFD700;
            color: #000;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 10px;
            transition: all 0.3s ease;
        }

            .btn-gold:hover {
                background-color: #ffe033;
                box-shadow: 0 0 15px rgba(255, 215, 0, 0.4);
                transform: translateY(-1px);
            }

        .btn-outline-gold {
            background-color: transparent;
            border: 1px solid #FFD700;
            color: #FFD700;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            .btn-outline-gold:hover {
                background-color: rgba(255, 215, 0, 0.1);
                color: #fff;
                border-color: #fff;
            }

        /* --- 5. LINKS & UTILS --- */
        .divider {
            height: 1px;
            background: linear-gradient(to right, transparent, #333, transparent); /* Fading line */
            margin: 25px 0;
        }

        .link-gold {
            color: #666;
            text-decoration: none;
            font-size: 0.85rem;
            transition: color 0.3s;
        }

            .link-gold:hover {
                color: #FFD700;
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="login-card">

        <div class="text-center mb-4">
            <h1 class="display-5 text-gold-metallic mb-1">
                <i class="fas fa-music me-2"></i>GOLD NOTE
            </h1>
            <p class="text-muted small">Sign in to your account</p>
        </div>

        <form method="post" asp-controller="Account" asp-action="Login">

            @if (ViewData["Error"] != null)
            {
                <div class="alert alert-danger text-center py-2" style="font-size: 0.9rem;">
                    @ViewData["Error"]
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center py-2" style="background-color: rgba(255,215,0,0.1); border-color: #FFD700; color: #FFD700; font-size: 0.9rem;">
                    @TempData["Success"]
                </div>
            }

            <div class="mb-3">
                <label for="userNameLogin" class="form-label">Username</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark border-secondary text-muted"><i class="fas fa-user"></i></span>
                    <input id="userNameLogin" name="Username" class="form-control" placeholder="Enter username" required />
                </div>
            </div>

            <div class="mb-4">
                <label for="userPassLogin" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark border-secondary text-muted"><i class="fas fa-lock"></i></span>
                    <input id="userPassLogin" type="password" name="Password" class="form-control" placeholder="Enter password" required />
                </div>
            </div>

            <div class="d-grid">
                <button id="logInButton" type="submit" class="btn btn-gold">
                    Log In
                </button>
            </div>
        </form>

        <div class="divider"></div>

        <div class="text-center d-flex flex-column gap-2">
            <div class="d-flex justify-content-between">
                <button class="btn btn-link link-gold p-0" type="button">Forgot Password?</button>
                <button class="btn btn-link link-gold p-0" type="button">Forgot Username?</button>
            </div>

            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-gold mt-2 w-100">
                Create New Account
            </a>
        </div>

    </div>

</body>
</html>