@{
    ViewData["Title"] = "Login";
    Layout = null;
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gold Note</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/6bdf13605e.js" crossorigin="anonymous"></script>

    <style>
        /* ===== RESET ===== */
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #000;
        }

        /* ===== PAGE CENTERING ===== */
        .page-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 15px;
        }

        /* ===== LOGIN CARD ===== */
        .login-card {
            background-color: #121212;
            border: 1px solid #333;
            width: 100%;
            max-width: 420px;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 50px rgba(0, 0, 0, 0.9);
        }

        /* ===== TYPOGRAPHY ===== */
        .text-gold-metallic {
            background: linear-gradient(to bottom, #d4af37 0%, #ffffaa 50%, #d4af37 100%);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            font-weight: 800;
            letter-spacing: -1px;
        }

        .subtitle {
            color: #888;
            font-size: 0.85rem;
        }

        .form-label {
            color: #FFD700;
            font-size: 0.7rem;
            text-transform: uppercase;
            font-weight: 700;
            letter-spacing: 1.5px;
            margin-bottom: 6px;
        }

        /* ===== INPUT GROUP ===== */
        .input-group-text {
            background-color: #1a1a1a;
            border: 1px solid #333;
            border-right: none;
            color: #FFD700;
        }

        .form-control {
            background-color: #080808;
            border: 1px solid #333;
            border-left: none;
            color: #fff;
            padding: 12px;
        }

            .form-control:focus {
                background-color: #000;
                box-shadow: none;
                border-color: #FFD700;
                color: #fff;
            }

        .input-group:focus-within .input-group-text {
            border-color: #FFD700;
            color: #fff;
        }

        /* Autofill fix */
        .form-control:-webkit-autofill {
            -webkit-box-shadow: 0 0 0 30px #080808 inset !important;
            -webkit-text-fill-color: white !important;
        }

        /* ===== BUTTONS ===== */
        .btn-gold {
            background-color: #FFD700;
            border: 1px solid #FFD700;
            color: #000;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 12px;
            transition: all 0.3s ease;
        }

            .btn-gold:hover {
                background-color: #ffe033;
                box-shadow: 0 0 15px rgba(255, 215, 0, 0.4);
                transform: translateY(-2px);
            }

        .btn-outline-gold {
            width: 100%;
            background-color: transparent;
            border: 1px solid #FFD700;
            color: #FFD700;
            font-weight: bold;
            padding: 10px;
            border-radius: 6px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .btn-outline-gold:hover {
                background-color: rgba(255, 215, 0, 0.1);
                color: #fff;
                border-color: #fff;
            }

        /* ===== LINKS ===== */
        .link-gold {
            color: #777;
            font-size: 0.85rem;
            text-decoration: none;
        }

            .link-gold:hover {
                color: #FFD700;
                text-decoration: underline;
            }

        .divider {
            height: 1px;
            background: linear-gradient(to right, transparent, #333, transparent);
            margin: 25px 0;
        }
    </style>
</head>

<body>

    <div class="page-wrapper">

        <div class="login-card">

            <!-- HEADER -->
            <div class="text-center mb-4">
                <h1 class="display-5 text-gold-metallic mb-1">
                    <i class="fas fa-music me-2"></i>GOLD NOTE
                </h1>
                <p class="subtitle">Sign in to your account</p>
            </div>

            <!-- FORM -->
            <form method="post" asp-controller="Account" asp-action="Login">

                @if (ViewData["Error"] != null)
                {
                    <div class="alert alert-danger text-center py-2">
                        @ViewData["Error"]
                    </div>
                }

                @if (TempData["Success"] != null)
                {
                    <div class="alert text-center py-2"
                         style="background-color: rgba(255,215,0,0.1); border-color: #FFD700; color: #FFD700;">
                        @TempData["Success"]
                    </div>
                }

                <div class="mb-3">
                    <label for="userNameLogin" class="form-label">Username</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input id="userNameLogin"
                               type="text"
                               name="Username"
                               class="form-control"
                               placeholder="Enter username"
                               required />
                    </div>
                </div>

                <div class="mb-4">
                    <label for="userPassLogin" class="form-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input id="userPassLogin"
                               type="password"
                               name="Password"
                               class="form-control"
                               placeholder="Enter password"
                               required />
                    </div>
                </div>

                <button type="submit" class="btn btn-gold w-100">
                    Log In
                </button>

            </form>

            <div class="divider"></div>

            <!-- LINKS -->
            <div class="d-flex justify-content-between mb-3">
                <button class="btn btn-link link-gold p-0" type="button">Forgot Password?</button>
                <button class="btn btn-link link-gold p-0" type="button">Forgot Username?</button>
            </div>

            <a asp-controller="Account"
               asp-action="Register"
               class="btn-outline-gold text-center d-block">
                Create New Account
            </a>

        </div>

    </div>

</body>
</html>
