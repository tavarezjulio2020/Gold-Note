@{
    ViewData["Title"] = "Login Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoldNote</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/6bdf13605e.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        /* Local overrides for the Login Page specifically */
        body {
            background-color: #000;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh; /* Full viewport height */
            margin: 0;
        }

        .login-card {
            background-color: #121212; /* Dark Grey Card */
            border: 1px solid #333;
            width: 100%;
            max-width: 400px;
            padding: 40px;
            border-radius: 5px; /* Square/Boxy look */
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.8); /* Deep shadow */
        }

        /* Override specific headers to use the "Newer" Vertical Gold */
        .text-gold-metallic {
            background: linear-gradient(to bottom, #d4af37 0%, #ffffaa 50%, #d4af37 100%);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent !important;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
            filter: drop-shadow(0px 2px 0px rgba(0,0,0,0.5));
        }

        .form-label {
            color: #FFD700; /* Gold Labels */
            font-size: 0.85rem;
            text-transform: uppercase;
            font-weight: bold;
            letter-spacing: 1px;
        }

        .form-control {
            background-color: #000;
            border: 1px solid #333;
            color: white;
            border-radius: 4px; /* Square inputs */
            padding: 10px;
        }

            .form-control:focus {
                background-color: #000;
                color: white;
                border-color: #FFD700;
                box-shadow: 0 0 5px rgba(255, 215, 0, 0.3);
            }

        .divider {
            border-top: 1px solid #333;
            margin: 20px 0;
        }

        .link-gold {
            color: #888;
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.2s;
        }

            .link-gold:hover {
                color: #FFD700;
            }
    </style>
</head>
<body>

    <div class="login-card">

        <div class="text-center mb-4">
            <h1 class="display-5 text-gold-metallic mb-1">
                <i class="fas fa-music me-2"></i>GOLD NOTE
            </h1>
            <p class="text-muted small">Sign in to your account</p>
        </div>

        <form method="post" asp-controller="Account" asp-action="Login">

            @if (ViewData["Error"] != null)
            {
                <div class="alert alert-danger text-center py-2" style="font-size: 0.9rem;">
                    @ViewData["Error"]
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center py-2" style="background-color: rgba(255,215,0,0.1); border-color: #FFD700; color: #FFD700; font-size: 0.9rem;">
                    @TempData["Success"]
                </div>
            }

            <div class="mb-3">
                <label for="userNameLogin" class="form-label">Username</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark border-secondary text-muted"><i class="fas fa-user"></i></span>
                    <input id="userNameLogin" name="Username" class="form-control" placeholder="Enter username" required />
                </div>
            </div>

            <div class="mb-4">
                <label for="userPassLogin" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text bg-dark border-secondary text-muted"><i class="fas fa-lock"></i></span>
                    <input id="userPassLogin" type="password" name="Password" class="form-control" placeholder="Enter password" required />
                </div>
            </div>

            <div class="d-grid">
                <button id="logInButton" type="submit" class="btn btn-gold">
                    Log In
                </button>
            </div>
        </form>

        <div class="divider"></div>

        <div class="text-center d-flex flex-column gap-2">
            <div class="d-flex justify-content-between">
                <button class="btn btn-link link-gold p-0" type="button">Forgot Password?</button>
                <button class="btn btn-link link-gold p-0" type="button">Forgot Username?</button>
            </div>

            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-gold mt-2 w-100">
                Create New Account
            </a>
        </div>

    </div>

</body>
</html>